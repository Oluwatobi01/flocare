generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  name              String?
  supabaseId        String?  @unique
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Profile settings
  profile           UserProfile?
  
  // Period tracking
  periods           Period[]
  symptoms          SymptomLog[]
  
  // Pregnancy tracking
  pregnancies       Pregnancy[]
  
  // Subscription
  subscription      Subscription?
  
  // Health insights
  healthInsights    HealthInsight[]
}

model UserProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  averageCycleLength Int     @default(28)
  averagePeriodLength Int   @default(5)
  birthDate         DateTime?
  height            Float?   // in cm
  weight            Float?   // in kg
  lastPeriodDate    DateTime?
  pregnancyMode     Boolean  @default(false)
  dueDate           DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Period {
  id                String   @id @default(cuid())
  userId            String
  startDate         DateTime
  endDate           DateTime?
  flowIntensity     String?  // light, medium, heavy
  notes             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Calculated fields
  cycleLength       Int?     // calculated based on previous period
  ovulationDate     DateTime? // predicted
  fertileWindowStart DateTime? // predicted
  fertileWindowEnd   DateTime? // predicted
}

model SymptomLog {
  id                String   @id @default(cuid())
  userId            String
  date              DateTime
  mood              String?  // happy, sad, anxious, etc.
  physicalSymptoms  String?  // JSON array of symptoms
  sleepHours        Float?
  sleepQuality      String?  // good, fair, poor
  energyLevel       String?  // high, medium, low
  notes             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Pregnancy {
  id                String   @id @default(cuid())
  userId            String
  startDate         DateTime // conception date or last period date
  dueDate           DateTime
  currentWeek       Int      @default(0)
  isCurrent         Boolean  @default(true)
  notes             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  weeklyUpdates     PregnancyUpdate[]
}

model PregnancyUpdate {
  id                String   @id @default(cuid())
  pregnancyId       String
  week              Int
  weight            Float?
  symptoms          String?
  notes             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  pregnancy         Pregnancy @relation(fields: [pregnancyId], references: [id], onDelete: Cascade)
}

model Subscription {
  id                String   @id @default(cuid())
  userId            String   @unique
  stripeCustomerId  String?
  stripeSubscriptionId String?
  plan              String   @default("free") // free, premium
  status            String   @default("active") // active, canceled, past_due
  currentPeriodEnd  DateTime?
  canceledAt        DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model HealthInsight {
  id                String   @id @default(cuid())
  userId            String
  type              String   // cycle_irregularity, symptom_pattern, health_tip
  title             String
  content           String
  severity          String?  // low, medium, high
  isRead            Boolean  @default(false)
  createdAt         DateTime @default(now())
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EducationalContent {
  id                String   @id @default(cuid())
  title             String
  content           String
  category          String   // menstruation, fertility, pregnancy, general_health
  targetAudience    String   // all, trying_to_conceive, pregnant, regular_cycle
  tags              String?  // JSON array of tags
  isPremium         Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}